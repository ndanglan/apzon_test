{
 "compilerOptions": {
  "target": "ES2020",
  "useDefineForClassFields": true,
  "lib": ["ES2020", "DOM", "DOM.Iterable"],
  "module": "ESNext",
  "skipLibCheck": true,

  /* Bundler mode */
  "moduleResolution": "bundler",
  "allowImportingTsExtensions": true,
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "jsx": "react-jsx",

  /* Linting */
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,

  "baseUrl": ".", // Set a base directory for resolving modules
  "paths": {
   "@/*": ["src/*"] // Map any path starting with "@" to the "src" directory
  }
 },
 "include": ["src"],
 "references": [{ "path": "./tsconfig.node.json" }]
}
